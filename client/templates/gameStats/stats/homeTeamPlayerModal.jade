template(name='homeTeamPlayerModal')
	#homeTeamPlayerModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
		.modal-dialog.modal-lg
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal', aria-label='Close')
						span(aria-hidden='true') &times;
					h4#myModalLabel.modal-title {{_ "whoIsDoingThisAction"}}
				.modal-body
					.OffActions
						h4 {{_ "offAction"}}
						.row.actions
							button#onePoint.btn.buttonForAction.shadow.btn-success.col-xs-3.col-sm-2.col-md-2.col-lg-2(data-dismiss='modal', type='button') {{_ "oneFT"}}
							button#twoPoint.btn.buttonForAction.shadow.btn-success.col-xs-3.col-sm-2.col-md-2.col-lg-2(data-dismiss='modal', type='button') {{_ "twoPoints"}}
							button#threePoint.btn.buttonForAction.shadow.btn-success.col-xs-3.col-sm-2.col-md-2.col-lg-2(data-dismiss='modal', type='button') {{_ "threePoints"}}
							button#assist.btn.buttonForAction.shadow.btn-success.col-xs-3.col-sm-2.col-md-2.col-lg-2(data-dismiss='modal', type='button') {{_ "assist"}}
							button#offReb.btn.buttonForAction.shadow.btn-success.col-xs-3.col-sm-2.col-md-2.col-lg-2(data-dismiss='modal', type='button') {{_ "offReb"}}
							button#offProvFoul.btn.buttonForAction.shadow.btn-success.col-xs-3.col-sm-2.col-md-2.col-lg-2(data-dismiss='modal', type='button') {{_ "provFoul"}}
						.row.actions
							button#onePointMiss.btn.buttonForAction.shadow.btn-danger.col-xs-3.col-sm-2.col-md-2.col-lg-2(data-dismiss='modal', type='button') {{_ "oneFT"}}
							button#twoPointMiss.btn.buttonForAction.shadow.btn-danger.col-xs-3.col-sm-2.col-md-2.col-lg-2(data-dismiss='modal', type='button') {{_ "twoPoints"}}
							button#threePointMiss.btn.buttonForAction.shadow.btn-danger.col-xs-3.col-sm-2.col-md-2.col-lg-2(data-dismiss='modal', type='button') {{_ "threePoints"}}
							button#turnover.btn.buttonForAction.shadow.btn-danger.col-xs-3.col-sm-2.col-md-2.col-lg-2(data-dismiss='modal', type='button') {{_ "turnover"}}
							button#offFoul.btn.buttonForAction.shadow.btn-danger.col-xs-3.col-sm-2.col-md-2.col-lg-2(data-dismiss='modal', type='button') {{_ "offFoul"}}
					.DefActions
						h4 {{_ "defAction"}}
						.row.actions
							button#steal.btn.buttonForAction.shadow.btn-success.col-xs-3.col-sm-2.col-md-2.col-lg-2(data-dismiss='modal', type='button') {{_ "steal"}}
							button#block.btn.buttonForAction.shadow.btn-success.col-xs-3.col-sm-2.col-md-2.col-lg-2(data-dismiss='modal', type='button') {{_ "block"}}
							button#defReb.btn.buttonForAction.shadow.btn-success.col-xs-3.col-sm-2.col-md-2.col-lg-2(data-dismiss='modal', type='button') {{_ "defReb"}}
							button#defProvFoul.btn.buttonForAction.shadow.btn-success.col-xs-3.col-sm-2.col-md-2.col-lg-2(data-dismiss='modal', type='button') {{_ "provFoul"}}
						.row.actions
							button#defFoul.btn.buttonForAction.shadow.btn-danger.col-xs-3.col-sm-2.col-md-2.col-lg-2(data-dismiss='modal', type='button') {{_ "foul"}}
							button#defFoulOneFT.btn.buttonForAction.shadow.btn-danger.col-xs-3.col-sm-2.col-md-2.col-lg-2(data-dismiss='modal', type='button') {{_ "foul1FT"}}
							button#defFoulTwoFT.btn.buttonForAction.shadow.btn-danger.col-xs-3.col-sm-2.col-md-2.col-lg-2(data-dismiss='modal', type='button') {{_ "foul2FT"}}
							button#defFoulthreeFT.btn.buttonForAction.shadow.btn-danger.col-xs-3.col-sm-2.col-md-2.col-lg-2(data-dismiss='modal', type='button') {{_ "foul3FT"}}
					.OtherActions
						h4 {{_ "otherFouls"}}
						.row.actions
							button#techFoul.btn.buttonForAction.shadow.btn-danger.col-xs-3.col-sm-2.col-md-2.col-lg-2(data-dismiss='modal', type='button') {{_ "techFoul"}}
							button#antiSportFoul.btn.buttonForAction.shadow.btn-danger.col-xs-3.col-sm-2.col-md-2.col-lg-2(data-dismiss='modal', type='button') {{_ "antiSportFoul"}}
							button#disqualifyingFoul.btn.buttonForAction.shadow.btn-danger.col-xs-3.col-sm-2.col-md-2.col-lg-2(data-dismiss='modal', type='button') {{_ "disqualifyingFoul"}}
				.modal-footer
					button#correctionAction.btn.pull-left.shadow.btn-warning(type='button') {{_ "correctionAction"}}
					button#closeModalButton.btn.shadow.btn-default(type='button', data-dismiss='modal') {{_ "closeModal"}}
