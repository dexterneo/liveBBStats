template(name='stats')
	.clearfix
		h4 {{_ "gameScore"}} :
		p {{gameInfos.homeTeam}} : {{gameStats.score.homeTeam}} - {{gameStats.score.awayTeam}} : {{gameInfos.awayTeam}}
	.clearfix
		h4 {{_ "gameQuarters"}}
		if notStarted
			button#notStarted.btn.shadow.btn-primary(type='button') {{_ "labelNotStarted"}}
		if q1Running
			button#q1Running.btn.shadow.btn-primary(type='button') {{_ "labelQ1Running"}}
		if q1Ended
			button#q1Ended.btn.shadow.btn-primary(type='button') {{_ "labelQ1Ended"}}
		if q2Running
			button#q2Running.btn.shadow.btn-primary(type='button') {{_ "labelQ2Running"}}
		if halfTime
			button#halfTime.btn.shadow.btn-primary(type='button') {{_ "labelHalfTime"}}
		if q3Running
			button#q3Running.btn.shadow.btn-primary(type='button') {{_ "labelQ3Running"}}
		if q3Ended
			button#q3Ended.btn.shadow.btn-primary(type='button') {{_ "labelQ3Ended"}}
		if q4Running
			button#q4Running.btn.shadow.btn-primary(type='button') {{_ "labelQ4Running"}}
		if gameEnded
			button#gameEnded.btn.shadow.btn-primary(disabled='disabled', type='button') {{_ "labelGameEnded"}}
	.clearfix
		h4 {{_ "homeTeam"}} : #{gameInfos.homeTeam}
		p {{_ "explanationHowToAddAStat"}}
		.homeTeam.row.playerRow
			each homeTeamPlayersPlaying
				+homeTeamPlayerPill
			else
				button.DisplayReplacement.btn.shadow.btn-warning(type='button') {{_ "fiveStarter"}}
			+homeTeamPlayerModal
	.clearfix
		h4 {{_ "awayTeam"}} : #{gameInfos.awayTeam}
		p {{_ "explanationHowToAddAStat"}}
		.awayTeam.row.playerRow
			each awayTeamPlayersPlaying
				+awayTeamPlayerPill
			else
				button.DisplayReplacement.btn.shadow.btn-warning(type='button') {{_ "fiveStarter"}}
			+awayTeamPlayerModal
