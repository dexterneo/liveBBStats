template(name='homeTeamPlayerReplacement')
	button.homeTeamPillForModal.shadow.btn.col-xs-4.col-sm-3.col-md-2.col-lg-2(disabled='{{endedGames}}', data-toggle='modal', data-target='#homeTeamReplacementModal') {{_ "number"}}
		span.playerIndex.hidden #{playerIndex}
		span.badge #{jersey}

template(name='awayTeamPlayerReplacement')
	button.awayTeamPillForModal.shadow.btn.col-xs-4.col-sm-3.col-md-2.col-lg-2(disabled='{{endedGames}}', data-toggle='modal', data-target='#awayTeamReplacementModal') {{_ "number"}}
		span.playerIndex.hidden #{playerIndex}
		span.badge #{jersey}