template(name='awayTeamReplacementModal')
	#awayTeamReplacementModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myReplacementLabel', aria-hidden='true')
		.modal-dialog.modal-lg
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal', aria-label='Close')
						span(aria-hidden='true') &times;
					h4#myReplacementLabel.modal-title {{_ "gameTimeWhenSwitchOccur"}}
				.modal-body
					p {{_ "switchProcess"}}
					.input-group.shadow.input-group-sm
						span.input-group-addon {{_ "minutes"}}
						select#awayTeamMinutes.form-control
							option 10
							option 9
							option 8
							option 7
							option 6
							option 5
							option 4
							option 3
							option 2
							option 1
							option 0
					.input-group.shadow.input-group-sm
						span.input-group-addon {{_ "secondes"}}
						select#awayTeamSecondes.form-control
							option 0
							option 55
							option 50
							option 45
							option 40
							option 35
							option 30
							option 25
							option 20
							option 15
							option 10
							option 5
				.modal-footer
					button#cancelSwitch.btn.pull-left.shadow.btn-warning(type='button') {{_ "cancelSwitch"}}
					button#validateSwitch.btn.shadow.btn-success(type='button', data-dismiss='modal') {{_ "validate"}}