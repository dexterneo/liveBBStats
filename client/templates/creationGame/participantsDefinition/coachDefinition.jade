template(name='coachDefinition')
	.coach.col-sm-4
		h4 {{_ "coach"}}
		.input-group.input-group-sm
			span.input-group-addon {{_ "name"}}
			input.lastName.form-control(type='text', value='#{lastName}')
		.input-group.input-group-sm
			span.input-group-addon {{_ "firstName"}}
			input.firstName.form-control(type='text', value='#{firstName}')
		.checkbox
			label
				input.primaryCoach(type='checkbox')
				| {{_ "primaryCoach"}}
