template(name="replacement")
	.row
		.col-xs-12.col-sm-12.col-md-6.col-lg-6
			.panel.panel-default
				.panel-heading
					p.panel-title #{yourClub}
				.panel-body
					p.bg-info {{_ "explanationHowToMakeAReplacement"}}
					with yourClubPlayers
						.panel.panel-default
							.panel-heading
								p.panel-title {{_ "inPlay"}}
							.panel-body
								#yourClubInPlay.row
									each playersInPlay
										.col-xs-4.col-sm-2.col-md-2.col-lg-2
											.thumbnail
												button.btn.btn-block.btn-info(data-toggle="modal" data-target="#replacementModal")
													strong #{jersey}
						.panel.panel-default
							.panel-heading
								p.panel-title {{_ "onTheBench"}}
							.panel-body
								#yourClubOnTheBench.row
									each playersOnTheBench
										.col-xs-4.col-sm-2.col-md-2.col-lg-2
											.thumbnail
												button.btn.btn-block.btn-info(data-toggle="modal" data-target="#replacementModal")
													strong #{jersey}
		.col-xs-12.col-sm-12.col-md-6.col-lg-6
			.panel.panel-default
				.panel-heading
					p.panel-title #{opponent}
				.panel-body
					p.bg-info {{_ "explanationHowToMakeAReplacement"}}
					with opponentPlayers
						.panel.panel-default
							.panel-heading
								p.panel-title {{_ "inPlay"}}
							.panel-body
								#opponentInPlay.row
									each playersInPlay
										.col-xs-4.col-sm-2.col-md-2.col-lg-2
											.thumbnail
												button.btn.btn-block.btn-warning(data-toggle="modal" data-target="#replacementModal")
													strong #{jersey}
						.panel.panel-default
							.panel-heading
								p.panel-title {{_ "onTheBench"}}
							.panel-body
								#opponentOnTheBench.row
									each playersOnTheBench
										.col-xs-4.col-sm-2.col-md-2.col-lg-2
											.thumbnail
												button.btn.btn-block.btn-warning(data-toggle="modal" data-target="#replacementModal")
													strong #{jersey}
	+replacementModal