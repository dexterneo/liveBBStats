template(name="header")
	nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
		.container
			.navbar-header
				button.navbar-toggle.collapsed(
					type="button",
					data-toggle="collapse",
					data-target="#navigation"
				)
					span.sr-only {{_ "toggleNav"}}
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href="{{pathFor 'home'}}") {{_ "ApplicationName"}}
			#navigation.collapse.navbar-collapse
				ul.nav.navbar-nav
					if currentUser
						li
							a.hidden-xs(href="{{pathFor 'me'}}") {{_ "myAccount"}}
						li
							a.visible-xs(
							href="{{pathFor 'me'}}"
							data-toggle="collapse"
							data-target=".navbar-collapse"
						) {{_ "myAccount"}}
				.nav.navbar-nav.navbar-right
					+loginButtons
