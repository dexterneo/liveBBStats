template(name="header")
	nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
		.container
			.navbar-header
				button.navbar-toggle.collapsed(
					type="button",
					data-toggle="collapse",
					data-target="#navigation"
				)
					span.sr-only {{_ "toggleNav"}}
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href="{{pathFor 'home'}}") {{_ "ApplicationName"}}
			#navigation.collapse.navbar-collapse
				ul.nav.navbar-nav
					li
						a.hidden-xs(href="{{pathFor 'liveGames'}}") {{_ "liveStats"}}
					li
						a.visible-xs(
							href="{{pathFor 'liveGames'}}"
							data-toggle="collapse"
							data-target=".navbar-collapse"
						) {{_ "liveStats"}}
					if currentUser
						if isClubAdmin
							li
								a.hidden-xs(href="{{pathFor 'myClub'}}") {{_ "myClub"}}
							li
								a.visible-xs(
									href="{{pathFor 'myClub'}}"
									data-toggle="collapse"
									data-target=".navbar-collapse"
								) {{_ "myClub"}}
						li
							a.hidden-xs(href="{{pathFor 'myAccount'}}") {{_ "myAccount"}}
						li
							a.visible-xs(
								href="{{pathFor 'myAccount'}}"
								data-toggle="collapse"
								data-target=".navbar-collapse"
							) {{_ "myAccount"}}
				.nav.navbar-nav.navbar-right
					+loginButtons
