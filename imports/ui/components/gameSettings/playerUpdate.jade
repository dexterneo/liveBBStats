template(name='playerUpdate')
	.player.col-xs-12.col-sm-6.col-md-4.col-lg-3
		.panel.panel-default
			.panel-heading
				h4.panel-title {{_ "player"}} #{jersey}
			.panel-body
				form(id='#{_id}')
					.form-group
						label(for="lastName") {{_ "lastName"}}
						input.lastName.form-control(
							type='text'
							name='lastName'
							value='#{lastName}'
						)
					.form-group
						label(for="firstName") {{_ "firstName"}}
						input.firstName.form-control(
							type='text'
							name='firstName'
							value='#{firstName}'
						)
			.panel-footer
				button.btn.btn-success.playerValidation(type='submit')
					span.glyphicon.glyphicon-floppy-save(aria-hidden="true")
					| {{_ "saveYourUpdates"}}
