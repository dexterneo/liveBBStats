template(name='coachUpdate')
	.coach.col-xs-12.col-sm-6.col-md-4.col-lg-3
		.panel.panel-default
			.panel-heading
				h4.panel-title {{_ "coach"}}
			.panel-body
				form
					.form-group
						label(for="lastName") {{_ "lastName"}}
						input.lastName.form-control(
							type='text',
							value='#{lastName}'
						)
					.form-group
						label(for="firstName") {{_ "firstName"}}
						input.firstName.form-control(
							type='text',
							value='#{firstName}'
						)
			.panel-footer
				button.btn.btn-success.coachValidation(type='submit')
					span.glyphicon.glyphicon-floppy-save(aria-hidden="true")
					| {{_ "saveYourUpdates"}}
