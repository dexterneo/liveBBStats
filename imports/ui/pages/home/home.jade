template(name='home')
	if Template.subscriptionsReady
		.hero
			.page-header
				h1 {{_ "ApplicationName"}}
			p.lead {{_ "appTeaserPhrase"}}
			+creationGame
		.panel.panel-default
			.panel-heading
				p.panel-title {{_ "runningGames"}}
			.panel-body
				.row
					each last12LiveGames
						.col-xs-12.col-sm-6.col-md-4.col-lg-4
							+gameCard
	else
		+spinner
