template(name='home')
	if Template.subscriptionsReady
		.page-header
			h1 {{_ "ApplicationName"}}
		p.lead {{_ "appTeaserPhrase"}}	
		+creationGame
		.row
			.col-xs-12.col-sm-12.col-md-6.col-lg-6
				.panel.panel-default
					.panel-heading
						p.panel-title {{_ "followDirect"}}
					.panel-body
						.row
							each game
								.col-xs-12.col-sm-12.col-md-6.col-lg-6
									+gameCard
							else
								p.no-games {{_ "noLiveGames"}}
					.panel-footer
						a(href="{{pathFor 'liveGames'}}") {{_ "orSelectARunningGame"}}
			.col-xs-12.col-sm-12.col-md-6.col-lg-6
				.panel.panel-default
					.panel-heading
						p.panel-title {{_ "seeEndedGames"}}
					.panel-body
						.row
							each endedGame
								.col-xs-12.col-sm-12.col-md-6.col-lg-6
									+gameCard
							else
								p.no-games {{_ "noLiveGames"}}
					.panel-footer
						a(href="{{pathFor 'liveGames'}}") {{_ "orSelectAnEndedGame"}}
	else
		+spinner
