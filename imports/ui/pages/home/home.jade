template(name='home')
	.jumbotron
		h1 {{_ "ApplicationName"}}
		p {{_ "appTeaserPhrase"}}
		if currentUser
			+creationGame
		else
			p {{_ "loginToBeginTakingStats"}}
	.row
		.col-xs-12.col-sm-12.col-md-6.col-lg-6
			.panel.panel-default
				.panel-heading
					h3.panel-title {{_ "followDirect"}}
				.panel-body
					.row
						each game
							.col-xs-12.col-sm-6.col-md-4.col-lg-4
								+GameCard
						else
							p.no-games {{_ "noLiveGames"}}
				.panel-footer
					a(href="{{pathFor 'liveGames'}}") {{_ "orSelectARunningGame"}}
		.col-xs-12.col-sm-12.col-md-6.col-lg-6
			.panel.panel-default
				.panel-heading
					h3.panel-title {{_ "seeEndedGames"}}
				.panel-body
					.row
						each endedGame
							.col-xs-12.col-sm-6.col-md-4.col-lg-4
								+GameCard
						else
							p.no-games {{_ "noLiveGames"}}
				.panel-footer
					a(href="{{pathFor 'liveGames'}}") {{_ "orSelectAnEndedGame"}}
