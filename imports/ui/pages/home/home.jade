template(name='home')
	if Template.subscriptionsReady
		.page-header
			h1 {{_ "ApplicationName"}}
		p.lead {{_ "appTeaserPhrase"}}
		if currentUser
			p
				+creationGame
		else
			p
				span.label.label-default {{_ "loginToBeginTakingStats"}}
		section
			.row
				.col-xs-12.col-sm-12.col-md-6.col-lg-6
					.panel.panel-default
						.panel-heading
							h3.panel-title {{_ "followDirect"}}
						.panel-body
							.row
								each game
									.col-xs-12.col-sm-6.col-md-4.col-lg-4
										+gameCard
								else
									p.no-games {{_ "noLiveGames"}}
						.panel-footer
							a(href="{{pathFor 'liveGames'}}") {{_ "orSelectARunningGame"}}
				.col-xs-12.col-sm-12.col-md-6.col-lg-6
					.panel.panel-default
						.panel-heading
							h3.panel-title {{_ "seeEndedGames"}}
						.panel-body
							.row
								each endedGame
									.col-xs-12.col-sm-6.col-md-4.col-lg-4
										+gameCard
								else
									p.no-games {{_ "noLiveGames"}}
						.panel-footer
							a(href="{{pathFor 'liveGames'}}") {{_ "orSelectAnEndedGame"}}
	else
		+spinner
