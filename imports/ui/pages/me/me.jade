template(name="me")
	if currentUser
		ul.nav.nav-tabs(role="tablist")
			li.active(role="presentation")
				a(
					href="#myGames",
					role="tab",
					data-toggle="tab"
					aria-controls="myGames"
				) {{_ "myGames"}}
		if Template.subscriptionsReady
			.tab-content
				if currentUser
					#myGames.tab-pane.active(role="tabpanel")
						.container
							.row
								each myGames
									.col-xs-12.col-sm-6.col-md-3.col-lg-3
										+gameCard
								else
									+creationGame
		else
			+spinner
