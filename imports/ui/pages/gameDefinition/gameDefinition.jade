template(name="gameDefinition")
	.panel.panel-default
		.panel-heading
			p.panel-title {{_ "newGameDefinition"}}
		.panel-body
			.panel.panel-default
				.panel-heading
					p.panel-title {{_ "teamDefinition"}}
				.panel-body
					form
						.row
							.col-xs-12.col-sm-12.col-md-6.col-lg-6
								.form-group
									.input-group
										span.input-group-addon {{_ "yourTeam"}}
										input#yourClub.form-control(type="text" list="homeClubList")
										select#homeClubList
											each clubName
												option #{name}
							.col-xs-12.col-sm-12.col-md-6.col-lg-6
								.form-group
									.input-group
										span.input-group-addon {{_ "opponent"}}
										input#opponent.form-control(type="text" list="awayClubList")
										select#awayClubList
											each clubName
												option #{name}
							.col-xs-12.col-sm-12.col-md-6.col-lg-6
								.form-group
									.input-group
										span.input-group-addon {{_ "level"}}
										input#level.form-control(type="text" list="levelList")
										select#levelList
											each level
												option #{val}
							.col-xs-12.col-sm-12.col-md-6.col-lg-6
								.form-group
									.input-group
										span.input-group-addon {{_ "group"}}
										input#group.form-control(type="text" list="groupList")
										select#groupList
											each group
												option #{val}
						.checkbox
							label
								input#privateGame(type="checkbox")
								| {{_ "privateGame"}}
			.panel.panel-default
				.panel-heading
					p.panel-title {{_ "playerDefinition"}}
				.panel-body
					.row.playerData
						.player.col-xs-12.col-sm-6.col-md-4.col-lg-3
							.panel.panel-default
								.panel-heading
									p.panel-title {{_ "player"}}
								.panel-body
									form
										.form-group
											.input-group.input-group-sm
												span.input-group-addon {{_ "num"}}
												input.jersey.form-control(type="number" min="4", max="15")
										.form-group
											.input-group.input-group-sm
												span.input-group-addon {{_ "name"}}
												input.lastName.form-control(type="text" value="#{lastName}")
										.form-group
											.input-group.input-group-sm
												span.input-group-addon {{_ "firstName"}}
												input.firstName.form-control(type="text" value="#{firstName}")
				.panel-footer
					button.btn.btn-primary.addPlayer(type="button") {{_ "addPlayer"}}
					button.btn.btn-danger.removePlayer(type="button") {{_ "removePlayer"}}
			.panel.panel-default
				.panel-heading
					p.panel-title {{_ "coachDefinition"}}
				.panel-body
					.row.coachData
						.coach.col-xs-12.col-sm-6.col-md-4.col-lg-3
							.panel.panel-default
								.panel-heading
									p.panel-title {{_ "coach"}}
								.panel-body
									form
										.form-group
											.input-group.input-group-sm
												span.input-group-addon {{_ "name"}}
												input.lastName.form-control(type='text', value='#{lastName}')
										.form-group
											.input-group.input-group-sm
												span.input-group-addon {{_ "firstName"}}
												input.firstName.form-control(type='text', value='#{firstName}')
										.checkbox
											label
												input.primaryCoach(type='checkbox')
												| {{_ "primaryCoach"}}
				.panel-footer
					button.btn.btn-primary.addCoach(type="button") {{_ "addCoach"}}
					button.btn.btn-danger.removeCoach(type="button") {{_ "removeCoach"}}
		.panel-footer
			button.configurationValidation.btn-block.btn.btn-success(type="button") {{_ "configurationValidation"}}
